<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/bus_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/bus_flat_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vehicles_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bus_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Bus 1"
        android:textStyle="bold"
        android:textSize="19sp"
        android:lines="2"
        />

    <ImageView
        android:id="@+id/time_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/clock"
        app:layout_constraintTop_toTopOf="@id/vehicle_time"
        app:layout_constraintBottom_toBottomOf="@id/vehicle_time"
        app:layout_constraintRight_toLeftOf="@id/vehicle_time"/>

    <TextView
        android:text="10:00 AM"
        android:id="@+id/vehicle_time"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@id/bus_image"
        app:layout_constraintTop_toBottomOf="@id/bus_image" />
    <TextView
        android:text="Ajmeri Gate  ->  Raja Park"
        android:id="@+id/venue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/vehicle_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vehicles_name"
        app:layout_constraintTop_toTopOf="@id/vehicle_time"/>

    <View
        android:id="@+id/view1"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/venue"
        android:background="@color/grey"
        app:layout_constraintRight_toRightOf="@id/vehicle_time"
        app:layout_constraintLeft_toLeftOf="@id/vehicles_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>







    <ImageView
        android:id="@+id/bus_image1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/bus_flat_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/vehicles_name1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bus_image"
        app:layout_constraintTop_toTopOf="@id/view1"
        android:text="Bus 2"
        android:textStyle="bold"
        android:textSize="19sp"
        android:lines="2"
        />

    <ImageView
        android:id="@+id/time_icon1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/clock"
        app:layout_constraintTop_toTopOf="@id/vehicle_time1"
        app:layout_constraintBottom_toBottomOf="@id/vehicle_time1"
        app:layout_constraintRight_toLeftOf="@id/vehicle_time"/>

    <TextView
        android:text="7:00 PM"
        android:id="@+id/vehicle_time1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@id/bus_image"
        app:layout_constraintTop_toBottomOf="@id/bus_image1" />
    <TextView
        android:text="LNMIIT  ->  RBI"
        android:id="@+id/venue1"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/vehicle_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vehicles_name"
        app:layout_constraintTop_toTopOf="@id/vehicle_time1"/>

    <View
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/venue1"
        android:background="@color/grey"
        app:layout_constraintRight_toRightOf="@id/vehicle_time"
        app:layout_constraintLeft_toLeftOf="@id/vehicles_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</android.support.constraint.ConstraintLayout>