<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:padding="8dp"
    android:background="@color/white"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="16dp"
        android:layout_height="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>
w
    <TextView
        android:id="@+id/events_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/event_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Advanced Programming Combined Quiz"
        android:textStyle="bold"
        android:textSize="19sp"
        android:lines="2"
        />

    <ImageView
        android:id="@+id/time_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/clock"
        app:layout_constraintTop_toTopOf="@id/event_time"
        app:layout_constraintBottom_toBottomOf="@id/event_time"
        app:layout_constraintRight_toLeftOf="@id/event_time"/>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/event_image"
        android:layout_marginTop="50dp"
        tools:text="Time" />
    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/event_time"
        app:layout_constraintBottom_toTopOf="@id/event_time"
        android:text="LI-9"/>
    
    <TextView
        android:id="@+id/organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>